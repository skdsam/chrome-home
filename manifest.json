{
  "manifest_version": 3,
  "name": "Chrome Home",
  "version": "1.0.0",
  "version_name": "1.0.0 (Initial Release)",
  "description": "Transform your new tab into a premium workspace with weather, shortcuts, AI sidebars, and productivity widgets.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "geolocation",
    "topSites",
    "history"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Save to Chrome Home"
  }
}
