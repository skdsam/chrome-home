{
  "manifest_version": 3,
  "name": "Chrome Home",
  "version": "1.0",
  "description": "A premium, customizable new tab page with shortcuts, search, and notifications.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "geolocation",
    "topSites",
    "history"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "Save to Chrome Home"
  }
}
